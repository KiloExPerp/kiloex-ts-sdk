{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist", 
        "rootDir": "./src", 
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
    },
    "include": ["src/**/*", "demo/**/*"],
    "exclude": ["node_modules", "dist"] 
}